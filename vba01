Sub CreateLineChart()
    Dim ws As Worksheet
    Dim chartObj As ChartObject
    Dim rng As Range
    
    ' 设定当前工作表
    Set ws = ActiveSheet
    
    ' 选中 A、B、C 列的所有数据（假设数据从第 1 行开始）
    Set rng = ws.Range("A1:C" & ws.Cells(Rows.Count, 1).End(xlUp).Row)
    
    ' 创建一个图表对象
    Set chartObj = ws.ChartObjects.Add(Left:=100, Top:=50, Width:=400, Height:=300)
    
    ' 设置图表类型为折线图（折れ線直線図表）
    With chartObj.Chart
        .SetSourceData Source:=rng
        .ChartType = xlLine ' 折线图
        .HasTitle = True
        .ChartTitle.Text = "PCの使用率" ' 设置图表标题
        .Axes(xlCategory).HasTitle = True
        .Axes(xlCategory).AxisTitle.Text = "X 軸 (カテゴリ)" ' X 轴标题
        .Axes(xlValue).HasTitle = True
        .Axes(xlValue).AxisTitle.Text = "Y 軸 (使用率 %)" ' Y 轴标题
        .Legend.Position = xlBottom ' 图例放在底部
    End With

    ' 提示完成
    MsgBox "PCの使用率のグラフが作成されました！", vbInformation, "完了"

End Sub
